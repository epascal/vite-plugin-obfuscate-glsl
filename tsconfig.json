{
  "compilerOptions": {
    "removeComments": true,
    "sourceMap": true,
    "target": "es2017",
    "module":"esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es2018", "dom"],
    "outDir": "build",
    "sourceRoot": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/node_modules", "demo/**/*"]
}